{{#partial "content"}}

    {{#if editTeam}}
        <h1>Edit Team {{editTeam.name}}</h1>
        <form action="/teams/{{editTeam.id}}/update" method="post">
            <label for="name">Team Name:</label>
            <input id="name" name="name" type="text" value="{{editTeam.name}}">
            <br>
            <label for="description">Team Description:</label>
            <input id="description" name="description" type="text" value="{{editTeam.description}}">
            <br>
            <button type="submit" class="btn btn-default">Update Team</button>
        </form>
    {{else}}
        <h1>Add a new Team!</h1>
        <form action="/teams/new" method="post">
            <label for="name">Team Name:</label>
            <input id="name" name="name" type="text" placeholder="Your team name here">
            <br>
            <label for="description">Team Description:</label>
            <input id="description" name="description" type="text" placeholder="Briefly describe your team">
            <br>
            <button type="submit" class="btn btn-default">Create Team</button>
        </form>
    {{/if}}
{{/partial}}

{{> layout.hbs}}