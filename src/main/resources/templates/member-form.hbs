{{#partial "content"}}

<h1>Edit Member {{editMember.name}}</h1>

<form action="/members/{{editMember.id}}" method="post">
    <label for="name">Member Name:</label>
    <input id="name" name="name" type="text" value="{{editMember.name}}">
    <br>
    <label for="skill">Member Skill:</label>
    <input id="skill" name="skill" type="text" value="{{editMember.skill}}">
    <br>
    <label for="teamId">Team:</label>
    <select id="teamId" name="teamId">
        {{#each teams}}
            <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select>
    <button type="submit" class="btn btn-default">Update Member</button>
</form>

{{/partial}}

{{> layout.hbs}}